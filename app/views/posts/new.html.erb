<!-- Form for creating posts -->
<h1> Create a post hommie! </h1>

      <div class="container">
        <%= form_for(@post)  do |new_post| %>
         <%= new_post.text_field :title, :placeholder => "Great Apes" %><br>
          <%= new_post.text_area(:body, cols:20, rows: 20, :placeholder => "Body") %><br>
          <%= new_post.submit %>
      <% end %>

    </div>


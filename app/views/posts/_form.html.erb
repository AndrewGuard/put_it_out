<%= form_for(@post) do |post_form| %>

<div class="field">
  <%= post_form.label :title %><br />
  <%= post_form.text_field :title %>
</div>
<div class="field">
  <%= post_form.label :body %><br />
  <%= post_form.text_area :body %>
</div>

<div class="actions">
  <%= post_form.submit %>
</div>
<% end %>
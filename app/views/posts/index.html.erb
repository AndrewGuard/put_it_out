 <div class="container">
 	<h2>Showing all posts! </h2>
 	<table>
 	<% @posts.each do |post| %>
 		<tr><td><a href="/posts/<%= post.id %> "><%= post.title %></a></td></tr>
 		<tr><td><%= button_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
 		<td><%= button_to '+1', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
 		<td><%= button_to '-1', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
 		</tr>
 	<% end %>
 	</table>
 </div>



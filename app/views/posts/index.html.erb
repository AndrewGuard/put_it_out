 <!-- Navbar of Login and Signup -->
 <div class="container">
 	<h2>Showing all posts! </h2>
 	<% @posts.each do |post| %>
 	<table>

 		<td> <a href="/posts/<%= post.id %> "><%= post.title %></a></td><br>
 		<td> <%= link_to 'Destroy', post, method: :delete, :class => "delete-button", data: { confirm: 'Are you sure?' } %></td>
 	</table>

 	<% end %>
 </div>


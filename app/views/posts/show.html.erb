<div class="container">

  <h2><%= @post.title %> </h2>
   <p><%= @post.body %></p>
   <% if @social_media_user == true %>
   Post by <%= @post.social_media_user.name %>
   <% else %>
   Post by <%= @post.user.name %>
   <% end %>
   <% if current_user %> <br> <br>
   <% if current_user.posts.include?(@post) %>
    <%= link_to 'Edit This Post', edit_post_path(@post) %> |
    <%= link_to 'Delete Post', @post, method: :delete, data: { confirm: 'Are you sure you want to delete this post?' } %><br>
   <% end %>
   <% end %>
   	<div style="font-weight:bold;"> This post has a score of: <%=@post.vote_count %></div>
 	<% if current_user %>
 	  <div><%= button_to 'Was this post Helpful? +1', "/posts/#{@post.id}/upvote", :method => :post%>
 	  <%= button_to 'Did this post just suck? -1', "/posts/#{@post.id}/downvote", :method => :post%></div>
 	<% end %>
	
 
	<h3>Comments</h3>
	<%= render @post.comments %>

	<% if current_user %>
	<h3>Add a comment:</h3>
	<%= render "comments/form" %>
	<% end %>
	<h5><%= link_to 'Back to All Posts', posts_path %> </h5>
	
</div>
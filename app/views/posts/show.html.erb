<div class="container">

  <h2><%= @post.title %> </h2>
   <p><%= @post.body %></p>
   Post by <%= @post.user.name %>

	<h3>Comments</h3>
	<%= render @post.comments %>

	<h3>Add a comment:</h3>
	<%= render "comments/form" %>

	<%= link_to 'Edit This Post', edit_post_path(@post) %> |
	<%= link_to 'Back to Posts', posts_path %> 
	
</div>

<div class="container">

  <h2><%= @post.title %> </h2>
   <p><%= @post.body %></p>
   <% if @social_media_user == true %>
   Post by <%= @post.social_media_user.name %>
   <% else %>
   Post by <%= @post.user.name %>
   <% end %>
   <%= button_to 'Delete Post', @post, method: :delete, data: { confirm: 'Are you sure?' } %>

	<h3>Comments</h3>
	<%= render @post.comments %>

	<h3>Add a comment:</h3>
	<%= render "comments/form" %>

	<%= link_to 'Edit This Post', edit_post_path(@post) %> |
	<%= link_to 'Back to Posts', posts_path %> 
	
</div>

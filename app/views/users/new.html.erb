<div class="container"><%= form_for(@user) do |user| %>
<h1>Create Account</h1>
<div>
	<%= user.label :name %> <br>
	<%= user.text_field :name  %>
</div>
<div>
	<%= user.label :email %> <br>
	<%= user.text_field :email  %>
</div>
<div>
	<%= user.label :username %> <br>
	<%= user.text_field :username  %>
</div>
<div>
	<%= user.label :password %> <br>
	<%= user.password_field :password  %>
</div>
	<%= user.submit "Create Account" %>
<% end %>
</div>

<div class="container">
<h1>Login</h1>
<%=form_tag login_sessions_path do %>
<div>
        <%= label_tag :email %> <br>
        <%= text_field_tag :email, nil, id: "login_email" %><br>
</div>
<div>
        <%= label_tag :password %> <br>
        <%= password_field_tag :password,  nil, id: "login_password" %><br>
        <%= submit_tag  nil, id: "login_user" %>
</div>
<% end %>
</div>



<% if flash[:error] %>
<div class="container">
<ul>
<% flash[:error].each do |error| %><br>
<li style="color:red"><%= error %> </li>
<% end %>
</ul>
</div>
<% end %>
